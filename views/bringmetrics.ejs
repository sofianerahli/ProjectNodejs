<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <!-- Laisons des fichiers CSS -->
        <link rel="stylesheet" href="../css/bootstrap.min.css">
        <link rel="stylesheet" href="../css/home.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </head>
    <body class="container">
        <div class="col-md-6 col-md-offset-3">
            <div class="jumbotron">
                <h1 align="center">Bring the metrics</h1> 
                <button class="btn btn-danger" href="/userpage" onClick='document.location.href="/userpage"'>
                    Home Userpage
                </button>
            </div> 
        <div align="center">
        <button class="btn btn-success" id="show-metrics">
            Bring the metrics
        </button>
        </div>
        <div id="metrics"></div>
        </div>
        <script>
        $('#show-metrics').click((e) => {
            e.preventDefault();
            $.getJSON("/metrics/:id", {}, (data) => {
            const content = data.map(d => {
                return 'date: '+d.date+', weight: '+d.weight+'';
            })
            $('#metrics').append(content.join("\n"));
            });
        })
        </script>
    </body>
</html>
